# 测试嵌套循环中的内存管理

class Item
    value: int
    
    def new(v: int)
        self.value = v
        print("Created Item: ")
        print(v)
    
    def destroy()
        print("Destroyed Item: ")
        print(self.value)

def test_nested_loops()
    print("=== Test nested loops ===")
    i = 0
    while i < 2
        print("Outer loop: ")
        print(i)
        
        obj = Item(i * 10)
        
        j = 0
        while j < 2
            print("  Inner loop: ")
            print(j)
            inner = Item(i * 10 + j)
            j = j + 1
        
        i = i + 1
    print("Done")

test_nested_loops()
