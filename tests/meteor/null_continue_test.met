# 测试 while true 和 null 检查

class Conn
    id: int
    def new(i: int)
        self.id = i

def get_conn(i: int) -> Conn?
    if i == 2
        print("Returning null")
        return null
    return Conn(i)

def test()
    i: int = 0
    while i < 5
        i = i + 1
        print("Iteration ")
        print(i)
        
        conn = get_conn(i)
        if conn == null
            print("  conn is null, continue")
            continue
        
        print("  conn.id = ")
        print(conn!.id)
    print("Loop done")

test()
